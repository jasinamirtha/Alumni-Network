<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/alumni"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            android:id="@+id/profile_pic"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Sanjeev Dubey"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="time"
                android:text="11 May: Two hours ago"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post"
        android:text="In the time of technology, what we need ia well formed mind, not only a well fillled mind. LIfe is Pain highness, anyonewho says differently is selling something "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/alumni"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            android:id="@+id/comment_btn"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/alumni"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            android:id="@+id/upvote_btn"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/alumni"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            android:id="@+id/downvote_btn"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_1"
            android:text="Nice formula!"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_2"
            android:text="It doesnt work actually!"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Load more.."
            android:id="@+id/more_comments"/>

    </LinearLayout>

</LinearLayout>